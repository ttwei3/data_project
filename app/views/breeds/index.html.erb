<!-- app/views/breeds/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Breeds Info</h1>

  <%= render partial: 'layouts/navigation' %>
  <%= yield %>

  <ul>
    <% @breeds.each do |breed| %>
      <li>
        <%= breed.breed_name %>
        <%= image_tag breed.image, size: '200x200' if breed.image.present? %>
      </li>
    <% end %>
  </ul>
  <%= paginate @breeds %>
</body>
</html>