<div id="map" style="width: 100%; height: 400px;"></div>

<script>
  function initMap() {
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 10,
      center: {lat: 49.8951, lng: -97.1384} // 以 Winnipeg 为地图中心
    });

    var addresses = <%= @owners.map { |o| {name: o.owner_name, lat: o.latitude, lng: o.longitude} }.to_json.html_safe %>;

    addresses.forEach(function(address) {
      if(typeof address.lat === 'number' && typeof address.lng === 'number') {
        var marker = new google.maps.Marker({
          position: {lat: address.lat, lng: address.lng},
          map: map,
          title: address.name
        });
      }
    });
  }

</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4SsS7L7lBrQtih7D2fXkuisfG-d37HlU&callback=initMap">
</script>