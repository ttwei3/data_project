<!-- app/views/breeds/show.html.erb -->
<div class="container mt-5">
  <%= render partial: 'layouts/navigation' %>
  <div class="row mb-3">
    <div class="col-12">
      <%= link_to 'Back to Dogs List', dogs_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h1><%= @breed.breed_name %></h1>
    </div>
  </div>

  <% if @breed.image.present? %>
    <div class="row">
      <div class="col-12">
        <%= image_tag @breed.image, alt: @breed.breed_name, class: "img-fluid mb-3", style: "max-width: 100%; height: auto;" %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-12">
        <p>No image available</p>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-12">
      <h3>Dogs of this Breed:</h3>
      <div class="list-group">
        <% @breed.dogs.each do |dog| %>
          <%= link_to dog.dog_name, dog_path(dog), class: "list-group-item list-group-item-action" %>
        <% end %>
      </div>
    </div>
  </div>
</div>